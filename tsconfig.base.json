{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "types": ["node", "jest"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@dad/config": ["libs/backend/config/src/index.ts"],
      "@dad/redis": ["libs/backend/redis/src/index.ts"],
      "@dad/shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
